<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container">
      <div class="form">
        <form action="/create" method="post">
          <input type="text" placeholder="Enter your title here : " name="title"/>
          <textarea
            name="details"
            placeholder="Enter your task details here"
          ></textarea>
          <button type="submit">Add</button>
        </form>
      </div>
      <div class="tasks">
       
          <% if(files.length > 0) { %> 
            <% files.forEach((file) => { %>
                <div class="task">
                    <h2><%= file %></h2>
                    <a href="/file/<%=file%>">Read more</a>
                </div>
            <% }) %>
        <% } %>
      </div>
    </div>
  </body>
</html>
